<% if @user.collections.any? %>
<h5><%= pluralize(@user.collections.count, 'Book') %> in your Collection.</h5>
<hr>
<ul>
	<% @collections.each do |collection| %>
		<li>
			<%= link_to collection.book.title, collection.book %>
			<%= collection.book.author %>
		</li>
	<% end %>
</ul>
<% else %>
	<h5>Visit our <%= link_to 'Library', books_path %>, Browse & Add books to your Collection.</h5>
<% end %>