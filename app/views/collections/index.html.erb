<h1>Books in Your collections</h1>

<table>
  <tr>
    <th>Book Title</th>
    <th>Book Id</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @collections.each do |collection| %>
  <tr>
    <td><%= collection.book.title %></td>
    <td><%= collection.book_id %></td>
    <td><%= link_to 'remove', collection, method: :delete, data: { confirm: "Are you sure?"} %></td>
  </tr>
<% end %>
</table>
