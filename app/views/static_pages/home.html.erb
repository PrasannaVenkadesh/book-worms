<% if signed_in? %>
	<div class='row'>
		<aside class='span4'>
			<section>
				<%= render 'shared/user' %>
			</section>
		</aside>
		<div class='span8'>
			<%= render 'shared/collection' %>
		</div>
	</div>
<% else %>
	<div class='center hero-unit shelf'>
		<h1>Book Worms</h1>
		<p><strong>Keep track of books you read. Join the club here.</strong></p><br/>
		<p>Know <a href='./help'>More</a></p>
		<%= button_to 'Sign Up', '/signup' , class: 'btn btn-success btn-large' %>
	</div>
<% end %>